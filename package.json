{
  "name": "lungojs",
  "version": "1.1.7",
  "description": "⚡A minimalist and high-performance HTTP web framework that makes it easy to build APIs with speed and efficiency.",
  "author": "Can Çevik <mazlumcancevik@gmail.com>",
  "license": "MIT",
  "keywords": [
    "http-server",
    "http-framework"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "scripts": {
    "release": "release-it",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preinstall": "npx only-allow pnpm",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "test": "cross-env NODE_ENV=test jest --verbose --maxWorkers=1",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "devDependencies": {
    "@types/accepts": "^1.3.5",
    "@types/cookie": "^0.5.1",
    "@types/formidable": "^3.4.1",
    "@types/jest": "^29.5.3",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.5.0",
    "@types/pug": "^2.0.6",
    "@types/qs": "^6.9.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "auto-changelog": "^2.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "release-it": "^16.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "accepts": "^1.3.8",
    "cookie": "^0.5.0",
    "formidable": "^3.5.0",
    "http-status-codes": "^2.2.0",
    "mime-types": "^2.1.35",
    "path-to-regexp": "^6.2.1",
    "pug": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canccevik/lungo.git"
  },
  "bugs": {
    "url": "https://github.com/canccevik/lungo/issues"
  },
  "homepage": "https://github.com/canccevik/lungo#readme",
  "publishConfig": {
    "access": "public"
  }
}
